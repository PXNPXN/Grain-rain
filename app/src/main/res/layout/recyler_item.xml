<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_note"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="@color/colorAccent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_radius">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_note_edit"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="160dp"
                    android:textSize="20sp"
                    android:background="@drawable/top_left_radius"
                    android:text="你好"/>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_marginTop="30dp"
                   android:background="@drawable/top_right_radius"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                   <ImageView
                       android:id="@+id/iv_note_remove"
                       android:layout_width="35dp"
                       android:visibility="invisible"
                       android:layout_marginLeft="30dp"
                       android:layout_height="35dp"
                       android:src="@drawable/remove_note"/>

                   <ImageView
                       android:id="@+id/iv_note_edit"
                       android:layout_width="30dp"
                       android:visibility="invisible"
                       android:layout_height="30dp"
                       android:layout_marginTop="16dp"
                       android:layout_marginLeft="30dp"
                       android:src="@drawable/note_edit"/>


                   <ImageView
                       android:id="@+id/iv_note_noti"
                       android:layout_width="40dp"
                       android:visibility="invisible"
                       android:layout_marginLeft="23dp"
                       android:layout_marginTop="16dp"
                       android:layout_height="40dp"
                       android:src="@drawable/noti"/>

               </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_note_editdate"
                android:layout_width="match_parent"
                android:text="2018-06-29 21:38:28"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>