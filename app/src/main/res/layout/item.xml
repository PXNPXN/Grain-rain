<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"
        app:contentPadding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/ib_first"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_desert"
                android:contentDescription="TODO" />
            <CheckBox
                style="@style/CustomCheckboxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_first"
                android:layout_marginTop="2dp"
                android:visibility="invisible"
                android:layout_below="@+id/ib_first"/>

            <TextView
                android:id="@+id/tv_title_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ib_first"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold"
                android:text=" 类型"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="105dp">
            <ImageButton
                android:id="@+id/ib_second"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_desert"
                android:contentDescription="TODO" />
            <CheckBox
                style="@style/CustomCheckboxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_second"
                android:layout_marginTop="2dp"
                android:visibility="invisible"
                android:layout_below="@+id/ib_second"/>

            <TextView
                android:id="@+id/tv_title_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ib_second"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold"
                android:text=" 类型"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="200dp">
            <ImageButton
                android:id="@+id/ib_third"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_desert"
                android:contentDescription="TODO" />
            <CheckBox
                style="@style/CustomCheckboxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_third"
                android:layout_marginTop="2dp"
                android:visibility="invisible"
                android:layout_below="@+id/ib_third"/>

            <TextView
                android:id="@+id/tv_title_third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ib_third"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold"
                android:text=" 类型"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
